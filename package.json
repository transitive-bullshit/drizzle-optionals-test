{
  "name": "@agentic/drizzle-optionals-test",
  "version": "0.0.0",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "MIT",
  "repository": "transitive-bullshit/drizzle-optionals-test",
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "scripts": {
    "test": "run-p test:*",
    "test:format": "prettier --check \"**/*.{js,ts,tsx}\"",
    "test:lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test:typecheck": "tsc --noEmit",
    "test:unit": "vitest run",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@fisch0920/drizzle-orm": "^0.43.5",
    "@fisch0920/drizzle-zod": "^0.7.7",
    "@paralleldrive/cuid2": "^2.2.2",
    "dotenv": "^16.5.0",
    "drizzle-seed": "^0.3.1",
    "postgres": "^3.4.5",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@fisch0920/config": "^1.1.0",
    "@types/node": "^22.15.18",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "eslint": "^9.26.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "lint-staged": "^16.0.0",
    "npm-run-all2": "^8.0.1",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "prettier": "@fisch0920/config/prettier",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --ignore-unknown --write",
      "eslint --fix"
    ]
  }
}
